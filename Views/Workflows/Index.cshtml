@model IEnumerable<IceSync.Models.Workflow>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="GetWorkflows" class="btn btn-success">Rebuild</a>
</p>
<a> @ViewData["ToplamPersonal"]</a>
<table id="example" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
    <thead class="badge-info">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsRunning)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MultiExecBehavior)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsRunning)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MultiExecBehavior)
                </td>
                <td>
                    <a asp-action="RunWorkflows" asp-route-id="@item.Id" class="btn alert-danger">RUN</a>
                </td>
            </tr>
        }
    </tbody>
</table>
    